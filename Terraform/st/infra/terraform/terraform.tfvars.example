aws_region  = "us-east-1"
environment = "nonprod"
vpc_cidr_block = "10.0.0.0/16"
public_subnet_cidr = ["10.0.1.0/24", "10.0.2.0/24"]
public_subnet_name = ["public_subnet_1", "public_subnet_2"]
public_subnet_zone = ["us-east-1a", "us-east-1b"]
private_subnet_cidr = ["10.0.11.0/24", "10.0.12.0/24"]
private_subnet_name = ["private_subnet_1", "private_subnet_2"]
private_subnet_zone = ["us-east-1a", "us-east-1b"]
bastion_sg_name    = "bastion_security_group"
bastion_ingress_ip = "0.0.0.0/0"  # Replace with your IP address for security
web_sg_name        = "web_security_group"
web_sg_ports       = [80, 443, 8080]
db_sg_name         = "db_security_group"
alb_sg_name        = "alb_security_group"
common_instance_type = "t3.micro"
db_instance_type     = "t3.small"
bastion-key          = "muchtodo-key"
bastion-pub-key      = ""  # Optional: SSH public key content
alb_name          = "muchtodo-alb"
target_group_name = "muchtodo-web-tg"
backend_port      = 8080
health_check_path                = "/health"
health_check_interval            = 30
health_check_timeout             = 5
health_check_healthy_threshold   = 2
health_check_unhealthy_threshold = 2
asg_min_size               = 1
asg_max_size               = 4
asg_desired_capacity       = 2
cpu_target_value           = 70
request_count_target_value = 1000
frontend_bucket_name   = "muchtodo-frontend-nonprod-unique-12345"
cloudfront_price_class = "PriceClass_100"
redis_engine_version       = "7.0"
redis_node_type            = "cache.t3.micro"
redis_num_cache_nodes      = 1
redis_parameter_group_name = "default.redis7"
log_retention_days          = 7
alb_response_time_threshold = 2
cpu_high_threshold          = 80
tags = {
  Org         = "muchtodo"
  ManagedBy   = "terraform"
  Environment = "nonprod"
  Project     = "StartTech"
}

# Vault Configuration (Optional)
use_vault_secrets         = false
vault_kv_mount            = "secret"
vault_infra_secret_path   = "muchtodo/infrastructure"
vault_db_secret_path      = "muchtodo/database"
vault_ssh_secret_path     = "muchtodo/ssh"
vault_backend_secret_path = "muchtodo/backend"
